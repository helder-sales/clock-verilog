//Debouncer
module debouncer(input in, output out);

wire op1, op2, op3;

/*------------------------------------------------------------------------------------*/

always @(*)
	begin
	
		op1 <= in;

		op2 <= op1;

		op3 <= op2;			
	
	end
	
out <= op1 & op2 & op3;
	
endmodule 

